    <%= content_tag :blockquote, raw(tr.introduction) %>
  <% end -%>

  <%= content_tag :h3, "Zarządzanie Projektami - narzędzia informatyczne" %>
  <% @trainings.select { |tr| tr.id == 6 }.each do |tr| %>
