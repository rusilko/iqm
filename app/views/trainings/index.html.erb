<% title "Harmonogram" %>

<% content_for :menu do %>

  <%= render 'side_menu' %>

<% end %>

<% content_for :content do %>
  <% @trainings.each do |tr| %>
    <%= link_to "zobacz szczegóły", training_path(tr), class: "pull-right" %>
    <%= content_tag :h5, tr.name %>
    <%= content_tag :blockquote, raw(tr.introduction) %>
  <% end -%>

<% end %>


<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>City</th>
      <th>Price Per Person</th>
      <th>Start Time</th>
      <th>Number Of Days</th>
      <th>Number Of Hours</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
  <% for training in @trainings %>
    <tr>
      <td><%= training.name %></td>
      <td><%= training.city %></td>
      <td><%= training.price_per_person %></td>
      <td><%= training.start_time %></td>
      <td><%= training.number_of_days %></td>
      <td><%= training.number_of_hours %></td>
      <td>
      <%= link_to "Show", training, class: 'btn btn-mini btn-success' %>
      <%= link_to "Copy", training, class: 'btn btn-mini btn-info' %>
      <%= link_to "Edit", edit_training_path(training), class: 'btn btn-mini btn-warning' %>
      <%= link_to "Destroy", training, :confirm => 'Are you sure?', :method => :delete, class: 'btn btn-mini btn-danger' %>
      <%= link_to "Zapisz się", register_training_orders_path(training), class: 'btn btn-mini btn-success' %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
<hr>
<p><%= link_to "+ Dodaj Szkolenie", new_training_path, id: "new_training_link" %></p>
