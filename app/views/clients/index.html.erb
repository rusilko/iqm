<% title "Clients" %>

<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Phone 1</th>
      <th>Phone 2</th>
      <th>Company</th>
      <th>Position</th>
      <th>Confirmed</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
  <% for client in @clients %>
    <tr>
      <td><%= client.name %></td>
      <td><%= client.email %></td>
      <td><%= client.phone_1 %></td>
      <td><%= client.phone_2 %></td>
      <td><%= client.company_id %></td>
      <td><%= client.position %></td>
      <td><%= client.confirmed %></td>
      <td>
      <%= link_to "Show", client, class: 'btn btn-mini btn-success' %>
      <%= link_to "Edit", edit_client_path(client), class: 'btn btn-mini btn-warning' %>
      <%= link_to "Destroy", client, :confirm => 'Are you sure?', :method => :delete, class: 'btn btn-mini btn-danger' %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<p><%= link_to "+ Dodaj Client", new_client_path %></p>
