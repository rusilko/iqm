<% title "Participants" %>
<h1>Participants</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Email</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @participants.each do |participant| %>      
       <tr>
        <td><%= participant.id %></td>
        <td><%= participant.name %></td>
        <td><%= participant.email %></td>
        <td>
          <%# link_to 'Show', offer , class: 'btn btn-mini' %>
          <%= link_to 'Edit', edit_participant_path(participant), class: 'btn btn-mini btn-info' %>
          <%= link_to 'Destroy', participant, method: :delete, data: { confirm: 'Are you sure?'}, class: 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<p><%= link_to "New Participant", new_participant_path %></p>
