<%= form_for @customer do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :phone_1 %><br />
    <%= f.text_field :phone_1 %>
  </p>
  <p>
    <%= f.label :phone_2 %><br />
    <%= f.text_field :phone_2 %>
  </p>
  <p>
    <%= f.label :customerable_id %><br />
    <%= f.number_field :customerable_id %>
  </p>
  <p>
    <%= f.label :customerable_type %><br />
    <%= f.text_field :customerable_type %>
  </p>
  <p><%= f.submit %></p>
<% end %>
