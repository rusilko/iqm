<% title "Seats" %>

<table>
  <tr>
    <th>ID</th>
    <th>Client</th>
    <th>Order Item</th>
    <th>Training</th>
  </tr>
  <% for seat in @seats %>
    <tr>
      <td> <%= seat.id %> </td>
      <td><%= seat.client.email %></td>
      <td><%= seat.order_item_id %></td>
      <td><%= seat.training_id %></td>
      <td><%= link_to "Show", seat %></td>
      <td><%= link_to "Edit", edit_seat_path(seat) %></td>
      <td><%= link_to "Destroy", seat, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "New Seat", new_seat_path %></p>
