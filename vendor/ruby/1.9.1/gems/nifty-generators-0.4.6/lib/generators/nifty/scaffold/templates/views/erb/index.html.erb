<%% title "<%= plural_name.titleize %>" %>

<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
    <%- for attribute in model_attributes -%>
      <th><%= attribute.human_name.titleize %></th>
    <%- end -%>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
  <%% for <%= instance_name %> in @<%= instances_name %> %>
    <tr>
    <%- for attribute in model_attributes -%>
      <td><%%= <%= instance_name %>.<%= attribute.name %> %></td>
    <%- end -%>
      <td>
    <%- if action? :show -%>
      <%%= link_to "Show", <%= item_path %>, class: 'btn btn-mini btn-success' %>
    <%- end -%>
    <%- if action? :edit -%>
      <%%= link_to "Edit", <%= item_path :action => :edit %>, class: 'btn btn-mini btn-warning' %>
    <%- end -%>
    <%- if action? :destroy -%>
      <%%= link_to "Destroy", <%= item_path %>, :confirm => 'Are you sure?', :method => :delete, class: 'btn btn-mini btn-danger' %>
    <%- end -%>
      </td>
    </tr>
  <%% end %>
  </tbody>
</table>

<%- if action? :new -%>
<p><%%= link_to "+ Dodaj <%= singular_name.titleize %>", <%= item_path :action => :new %> %></p>
<%- end -%>